<Window x:Class="WPF.GridFormular.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    
    <Grid VerticalAlignment="Top" Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="4" />
            <RowDefinition />
            <RowDefinition Height="4" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Vorname" />
        <TextBox Grid.Column="1" Grid.Row="0" Text="" Margin="0,-2,0,2" />
        <Label Grid.Column="0" Grid.Row="2" Content="Nachname" />
        <TextBox Grid.Column="1" Grid.Row="2" Text="" />
        <Label Grid.Column="0" Grid.Row="4" Content="Adresse" />
        <TextBox Grid.Column="1" Grid.Row="4" Text="" />
    </Grid>
</Window>
